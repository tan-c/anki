{
  "name": "anki",
  "version": "1.0.0",
  "productName": "AnkiWebClient",
  "homepage": "https://tan-c.github.io/anki",
  "repository": {
    "type": "git",
    "url": "https://github.com/tan-c/anki"
  },
  "description": "Anki Web Client",
  "engines": {
    "node": "7.1.0"
  },
  "author": "Tan Chen",
  "license": "ISC",
  "url": "https://github.com/tan-c/anki-monorepo/issues",
  "email": "tanchen2014@gmail.com",
  "scripts": {
    "test": "BABEL_ENV=test npx jest --config ../../utility-test/jest.config.js packages/project/",
    "test:ci": "npm test --ci",
    "test:recent": "npx jest --changedSince=master || true ../../jest.confing.js",
    "test:watch": "npm test --watch",
    "test:e2e": "testcafe 'chrome:headless --no-sandbox' ./test-e2e/",
    "test:e2e:docker:local": "docker run --network ps-bridge -v /Users/tanchen/Desktop/monorepo-js/packages/anki/test-e2e:/tests -it testcafe/testcafe 'chromium:headless --no-sandbox' /tests",
    "test:e2e:docker:ci": "docker run --network ps-bridge -v /root/project/test-e2e:/tests -it testcafe/testcafe 'chromium:headless --no-sandbox' /tests",
    "start:dev": "cp ../../app.dev.js ./ ; nodemon -w app.dev.js app.dev.js --exec babel-node",
    "start:test:ci": "cp ../../app.dev.js ./ ; babel-node app.dev.js &",
    "build": "rm -rf dist; cp -r ../../utility-webpack/* ./; NODE_ENV=production babel-node prod.build.js",
    "precommit:check:sensitive": "cp ../../.githound.yml ./ && git hound sniff HEAD"
  },
  "dependencies": {
    "babel-cli": "6.26.0"
  },
  "devDependencies": {
    "husky": "1.0.0-rc.6",
    "lint-staged": "7.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged; cp ../../.circleci/config.yml .circleci/config.yml; npm run precommit:check:sensitive; git add .",
      "pre-push": "npm run test:recent; snyk test --severity-threshold=high"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/vendor/*.min.js"
    ]
  },
  "browserslist": [
    "> 1%"
  ]
}
