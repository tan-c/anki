{
  "name": "anki",
  "version": "1.0.0",
  "productName": "AnkiWebClient",
  "homepage": "https://tan-c.github.io/anki",
  "repository": {
    "type": "git",
    "url": "https://github.com/tan-c/anki"
  },
  "description": "Anki Web Client",
  "engines": {
    "node": "7.1.0"
  },
  "author": "Tan Chen",
  "license": "ISC",
  "url": "https://github.com/tan-c/anki-monorepo/issues",
  "email": "tanchen2014@gmail.com",
  "scripts": {
    "test": "BABEL_ENV=test npx jest --config ../../utility-test/jest.config.js packages/anki/",
    "test:ci": "BABEL_ENV=test npx jest --config /js-base-image/utility-test/jest.config.js ./ --ci",
    "test:recent": "npx jest --changedSince=master || true ../../jest.confing.js",
    "test:update": "npm test -u",
    "test:watch": "npm test --watch",
    "start:dev": "cp ../../app.dev.js ./ ; nodemon -w app.dev.js app.dev.js --exec babel-node",
    "build": "rm -rf dist; cp -r ../../utility-webpack/* ./; NODE_ENV=production babel-node prod.build.js",
    "copy:circleci": "cp ../../.circleci/config.yml .circleci/config.yml; git add .",
    "push:copy:circleci": "npm run copy:circleci; git commit -m 'chore: updated circleci'; git pom"
  },
  "dependencies": {
    "babel-cli": "6.26.0"
  },
  "devDependencies": {
    "husky": "1.0.0-rc.6",
    "lint-staged": "7.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged; npm run copy:circleci",
      "pre-push": "npm run test:recent; snyk test --severity-threshold=high"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "**/vendor/*.min.js"
    ]
  },
  "browserslist": [
    "> 1%"
  ]
}
